{
  "name": "grpc-bridge",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev:desktop": "nx run desktop:dev",
    "dev:ui": "pnpm --filter @grpc-bridge/ui dev:web",
    "dev:server": "nx run server:dev",
    "build": "bash scripts/build-all.sh",
    "build:web": "bash scripts/build-web.sh",
    "build:desktop": "bash scripts/build-desktop.sh",
    "build:ui": "nx run ui:build",
    "build:ui:desktop": "pnpm --filter @grpc-bridge/ui build:desktop",
    "build:ui:web": "pnpm --filter @grpc-bridge/ui build:web",
    "build:server": "nx run server:build",
    "lint": "nx run-many -t lint",
    "type-check": "nx run-many -t type-check",
    "format": "prettier --write \"apps/**/src/**/*.{js,jsx,ts,tsx,json,css,md}\" \"libs/**/src/**/*.{ts,json}\"",
    "graph": "nx graph",
    "deps:update": "pnpm update --latest -r",
    "deps:check": "pnpm audit",
    "clean": "rm -rf dist/ apps/desktop/src-tauri/target/ node_modules/ apps/*/node_modules/ libs/*/node_modules/ apps/server/internal/static/dist/",
    "setup": "./setup-dev.sh",
    "cross-build": "./cross-build.sh",
    "release:patch": "pnpm version patch && git push && git push --tags",
    "release:minor": "pnpm version minor && git push && git push --tags",
    "release:major": "pnpm version major && git push && git push --tags"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@nx-go/nx-go": "3.3.1",
    "@nx/js": "^21.6.4",
    "@nx/react": "^21.6.4",
    "@nx/vite": "^21.6.4",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "globals": "^16.4.0",
    "nx": "^21.6.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  }
}